# ============================================================
# Tramuntana — Environment Variables
# Copy this file to .env.local and fill in values
# NEVER commit .env.local to version control
# ============================================================

# --- Privy Auth ---
# Get your App ID from: https://console.privy.io/
NEXT_PUBLIC_PRIVY_APP_ID=clxxxxxxxxxxxxxxxxxx

# --- peer.xyz zkP2P Onramp ---
# Redirect-based — no API key required for basic integration
# Configure your return URL:
NEXT_PUBLIC_PEER_RETURN_URL=http://localhost:3000/onramp/success
NEXT_PUBLIC_PEER_BASE_URL=https://app.peer.xyz

# --- Veda Vaults (BoringVault) ---
# Tramuntana Master Vault contract address (deploy separately)
NEXT_PUBLIC_TRAMUNTANA_MASTER_VAULT=0x0000000000000000000000000000000000000000
# Accountant contract
NEXT_PUBLIC_TRAMUNTANA_ACCOUNTANT=0x0000000000000000000000000000000000000000
# Teller contract
NEXT_PUBLIC_TRAMUNTANA_TELLER=0x0000000000000000000000000000000000000000

# --- Hyperliquid ---
# Builder code address — receives fee share
# Reference: Phantom builder code: 0xb84168cf3be63c6b8dad05ff5d755e97432ff80b
NEXT_PUBLIC_HL_BUILDER_ADDRESS=0x0000000000000000000000000000000000000000
# Fee in basis points (1 bps = 0.01%). Match Phantom fees.
NEXT_PUBLIC_HL_BUILDER_FEE_BPS=1
# API endpoint
NEXT_PUBLIC_HL_API_URL=https://api.hyperliquid.xyz

# --- Blockchain RPC ---
# Ethereum mainnet RPC (Alchemy/Infura)
NEXT_PUBLIC_ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
# Arbitrum RPC (Hyperliquid settles on Arbitrum)
NEXT_PUBLIC_ARB_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY

# --- Feature Flags ---
# Enable/disable features for gradual rollout
NEXT_PUBLIC_ENABLE_TRADING=true
NEXT_PUBLIC_ENABLE_ONRAMP=true
NEXT_PUBLIC_ENABLE_VAULTS=true
NEXT_PUBLIC_DEMO_MODE=true
